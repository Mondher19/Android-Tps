<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="361dp"

        android:foregroundGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewexp"
                android:layout_width="372dp"
                android:layout_height="216dp"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:background="@drawable/gradiant_overlay"
                android:foreground="@drawable/gradient_background"
                android:foregroundGravity="center_vertical|center"


                app:srcCompat="@drawable/ic_logo_esprit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginTop="-40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Nameexp"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="end"
                    android:text="Name"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cuntryexp"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:foregroundGravity="right"
                    android:gravity="end"
                    android:text="Cuntry"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginTop="-130dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startdatexp"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="12/12/2022"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/enddatexp"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="15/12/2023"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="391dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
